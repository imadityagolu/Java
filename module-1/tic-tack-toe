//input--
xooox                
oxoxo                
ooxoo                
oxoxo                
xooox


//output--
import java.io.*;
import java.util.*;

public class Solution {
    
    public static void main(String[] args) {
    Scanner s = new Scanner(System.in);
    int n = s.nextInt();

    for (int i = 0; i < n; i++) {
        for (int j = 0; j < n; j++) {
        // Check conditions to determine when to print 'x' or 'o'
                if (i == j || i + j == n - 1) {
                    System.out.print("x");
                } else {
                    System.out.print("o");
                }
            }
    System.out.println(); // Move to the next line after each row
        }
    }
}
