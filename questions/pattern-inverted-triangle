import java.io.*;
import java.util.*;

public class Solution {

    public static void main(String[] args) {
        Scanner scn = new Scanner(System.in);
          int n = scn.nextInt();
          for (int i = 0; i <= n; i += 2){
              for (int j = 0; j < i/2; j++){
                  System.out.print("\t");
              }
              for (int j = n; j > i; j--){
                  System.out.print("*\t");
              }
              System.out.println();
          }
    }
}
